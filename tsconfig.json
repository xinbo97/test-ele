{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@demo/*":[
        "src/*"
      ]
    },
    "outDir": "release/app/dist",
  },
  "include": [
    "src"
  ],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
